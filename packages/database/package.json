{
  "name": "@camp-platform/database",
  "version": "1.0.0",
  "description": "Prisma schema, migrations, seed data, and database client for Camp Alborz",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "generate": "prisma generate",
    "migrate:dev": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:reset": "prisma migrate reset",
    "migrate:status": "prisma migrate status",
    "seed": "tsx prisma/seed.ts",
    "studio": "prisma studio",
    "db:push": "prisma db push",
    "db:pull": "prisma db pull",
    "setup": "npm run generate && npm run migrate:dev && npm run seed",
    "type-check": "tsc --noEmit"
  },
  "prisma": {
    "schema": "prisma/schema.prisma",
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.3.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/node": "^20.5.0",
    "bcryptjs": "^2.4.3",
    "prisma": "^5.3.1",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6"
  }
}
